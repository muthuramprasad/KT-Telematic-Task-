doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title}

    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/css/bootstrap.min.css")

    link(rel="stylesheet", href="https://cdn.datatables.net/2.3.5/css/dataTables.bootstrap5.css")

    link(rel="stylesheet", href="/css/style.css")

  body

    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        a.navbar-brand(href="/") Asset Tracker
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav
            li.nav-item
              a.nav-link(href="/") Dashboard
            li.nav-item
              a.nav-link(href="/api/employees/view") Employees
            li.nav-item
              a.nav-link(href="/api/categories/view") Categories
            li.nav-item
              a.nav-link(href="/api/assets/view") Assets
            
        
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href="#", role="button", data-bs-toggle="dropdown", aria-expanded="false") Transactions
              ul.dropdown-menu
                li
                  a.dropdown-item(href="/api/transactions/issue") Issue Asset
                li
                  a.dropdown-item(href="/api/transactions/return") Return Asset
                li
                  a.dropdown-item(href="/api/transactions/scrap") Scrap Asset
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item(href="/api/transactions/history") Asset History
        

    header.d-flex.justify-content-center.text-dark.p-3.mb-4
      h1 Asset Tracker Application

    .container.mt-4
      block content


    script(src="https://code.jquery.com/jquery-3.7.1.js")

  
    script(src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js")

 
    script(src="https://cdn.datatables.net/2.3.5/js/dataTables.js")

 
    script(src="https://cdn.datatables.net/2.3.5/js/dataTables.bootstrap5.js")

   
    script(src="app/public/js/main.js")